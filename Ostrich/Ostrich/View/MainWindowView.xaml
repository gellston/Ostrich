<dx:ThemedWindow 
    x:Class="Ostrich.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:uc="clr-namespace:UC;assembly=UC"
    Title="MainWindow" Height="800" Width="1000"
    DataContext="{Binding Source={StaticResource Locator}, Path=MainWindowViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>

        <uc:FlowChartView NodeViewModelCollection="{Binding NodeViewModelCollection, Mode=OneWay}"
                          ConnectorViewModellCollection="{Binding ConnectorViewModelCollection, Mode=OneWay}"
                          Grid.Row="0"></uc:FlowChartView>

        <Button Grid.Row="1"
                Content="TEST"
                FontSize="25"
                Command="{Binding TestCommand}"></Button>
    </Grid>
</dx:ThemedWindow>
