                                                         Duration="0:0:1" 
                                                         RepeatBehavior="Forever" 
                                                         AutoReverse="False"
                                                         By="2" 
                                                         Storyboard.TargetProperty="StrokeDashOffset"/>
                                    </Storyboard>
                                </BeginStoryboard>
                 
                            </EventTrigger>
                        </Line.Triggers>
                        <Line.Style>
